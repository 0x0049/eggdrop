# Makefile for src/mod/pbkdf2.mod/

srcdir = .

MODNAME=pbkdf2

MYCPPFLAGS=@CPPFLAGS@ $(CPPFLAGS)
MYCFLAGS=$(CFLAGS) $(MYCPPFLAGS) -I.
LIBS=@LIBS@ $(MODULE_XLIBS) $(XLIBS)
LDFLAGS=@LDFLAGS@
RANLIB=@RANLIB@

MAKE_DEPEND = $(MAKE) 'MAKE=$(MAKE)' 'CC=$(CC)' \
              'CFLAGS=-I.. -I../../../.. -DMAKING_DEPEND -DHAVE_CONFIG_H -DMAKING_MODS'

doofus:
	@echo ""
	@echo "Let's try this from the right directory..."
	@echo ""
	@cd ../../../ && make

static: ../$(MODNAME).o
	cp modxobjs ../mod.$(MODNAME).xlibs

modules: ../../../$(MODNAME).$(MOD_EXT)

../$(MODNAME).o:
	$(CC) $(MYCFLAGS) -DMAKING_MODS -c $(srcdir)/$(MODNAME).c
	@rm -f ../$(MODNAME).o
	mv $(MODNAME).o ../

../../../$(MODNAME).$(MOD_EXT): ../$(MODNAME).o
	$(LD) $(LDFLAGS) -o ../../../$(MODNAME).$(MOD_EXT) ../$(MODNAME).o `cat xobjs` $(LIBS)
	$(STRIP) ../../../$(MODNAME).$(MOD_EXT)

depend:
	$(CC) $(MYCFLAGS) -MM $(srcdir)/$(MODNAME).c -MT ../$(MODNAME).o > .depend

clean:
	@rm -f .depend *.o *.$(MOD_EXT) *~ xobjs modxobjs

distclean: clean
	@rm -rf autom4te.cache Makefile config.log config.status config.cache

#safety hash
../pbkdf2.o: .././pbkdf2.mod/pbkdf2.c .././pbkdf2.mod/pbkdf2.h \
 ../../../src/mod/module.h ../../../src/main.h ../../../config.h \
 ../../../eggint.h ../../../lush.h ../../../src/lang.h \
 ../../../src/eggdrop.h ../../../src/compat/in6.h ../../../src/flags.h \
 ../../../src/cmdt.h ../../../src/tclegg.h ../../../src/tclhash.h \
 ../../../src/chan.h ../../../src/users.h ../../../src/compat/compat.h \
 ../../../src/compat/base64.h ../../../src/compat/inet_aton.h \
 ../../../src/compat/snprintf.h ../../../src/compat/inet_ntop.h \
 ../../../src/compat/inet_pton.h ../../../src/compat/gethostbyname2.h \
 ../../../src/compat/strlcpy.h ../../../src/mod/modvals.h \
 ../../../src/tandem.h .././pbkdf2.mod/pbkdf2crypt.c \
 .././pbkdf2.mod/pbkdf2crypt_openssl.c
