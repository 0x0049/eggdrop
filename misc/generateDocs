# configuration script generated by Autoconf, you may include it under
# the same distribution terms that you use for the rest of that program.

echo "*** Searching for pandoc..."
PANDOC="$(which pandoc)"
if [ $? -eq 0 ]; then 
  echo "Found."
else
  echo "Not found. Exiting..."
  exit 1
fi
  
mkdir -p tmpdocs
echo "*** Generating plaintext docs..."
for i in $( find ../doc/sphinx_source/ -type f -name "*.rst" ); do
  FILENAME=$(basename "$i")
  FILENAME="${FILENAME%.*}"
  echo $FILENAME
  pandoc -f rst -t plain -o tmpdocs/$FILENAME.txt $i
done

echo "*** Generating HTML files..."
( cd ../doc/sphinx_source/ && make html )

echo "*** Stupid housecleaning..."
mv tmpdocs/about.txt ../doc/ABOUT
mv tmpdocs/assoc.txt ../doc/settings/mod.assoc
mv tmpdocs/bans.txt ../doc/BANS
mv tmpdocs/blowfish.txt ../doc/settings/mod.blowfish
mv tmpdocs/botnet.txt ../doc/BOTNET
mv tmpdocs/channels.txt ../doc/settings/mod.channels
mv tmpdocs/compress.txt ../doc/settings/mod.compress
mv tmpdocs/console.txt ../doc/settings/mod.console
mv tmpdocs/core.txt ../doc/settings/core.settings
mv tmpdocs/ctcp.txt ../doc/settings/mod.ctcp
mv tmpdocs/dns.txt ../doc/settings/mod.dns
mv tmpdocs/faq.txt ../doc/FAQ
mv tmpdocs/features.txt ../../FEATURES
mv tmpdocs/filesys.txt ../doc/settings/mod.filesys
mv tmpdocs/install.txt ../../INSTALL
mv tmpdocs/irc.txt ../doc/settings/mod.irc
mv tmpdocs/known-probs.txt ../doc/KNOWN-PROBLEMS
mv tmpdocs/notes.txt ../doc/settings/mod.notes
mv tmpdocs/partyline.txt ../doc/PARTYLINE
mv tmpdocs/patch.txt ../doc/PATCH-HOWTO
mv tmpdocs/readme.txt ../../README
mv tmpdocs/seen.txt ../doc/settings/mod.seen
mv tmpdocs/server.txt ../doc/settings/mod.server
mv tmpdocs/share.txt ../doc/settings/mod.share
mv tmpdocs/tcl-commands.txt ../doc/tcl-commands.doc
mv tmpdocs/text-sub.txt ../doc/TEXT-SUBSTITUTIONS
mv tmpdocs/transfer.txt ../doc/settings/mod.transfer
mv tmpdocs/tricks.txt ../doc/TRICKS
mv tmpdocs/uptime.txt ../doc/settings/mod.uptime
mv tmpdocs/users.txt ../doc/USERS
mv tmpdocs/weird-msgs.txt ../doc/WEIRD-MESSAGES
mv tmpdocs/woobie.txt ../doc/settings/mod.woobie
rm -rf tmpdocs

echo "Yahtzee!"
